############################################
# AWS & Environment
############################################

aws_region  = "us-east-1"
environment = "dev"

############################################
# VPC
############################################

vpc_cidr = "10.0.0.0/16"

############################################
# Subnets (ALB needs 2 public subnets)
############################################

public_subnet_cidrs = [
  "10.0.1.0/24",
  "10.0.2.0/24"
]

private_subnet_cidrs = [
  "10.0.11.0/24",
  "10.0.12.0/24"
]

############################################
# EC2
############################################

instance_type = "t3.micro"
key_name      = "dev-key"

############################################
# App Port
############################################

strapi_port = 1337
